<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtraining">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTraining">
        <activity android:name=".fragments.FragmentsActivity"></activity>
        <activity android:name=".recycleview.RecycleViewActivity" />
        <activity android:name=".glide.GlideActivity" />
        <activity android:name=".retrofit.RetrofitActivity" />
        <activity android:name=".sharedpreferences.SharedPreferencesActivity" />
        <activity android:name=".intents.ExplicitIntentActivity" />
        <activity android:name=".intents.IntentsActivity" />
        <activity android:name=".constraintlayout.ConstraintLayoutActivity" />
        <activity android:name=".binding.BindingActivity" />
        <activity android:name=".webview.WebViewActivity" />
        <activity android:name=".framelayout.FrameLayoutActivity" />
        <activity android:name=".cardview.CardViewActivity" />
        <activity android:name=".linearlayout.LinearLayoutActivity" />
        <activity android:name=".lifecycle.LifecycleActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>